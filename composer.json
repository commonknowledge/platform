{
  "name": "commonknowledge/wordpress-starter-template",
  "type": "project",
  "license": "MIT",
  "description": "A WordPress starter template for organisers and campaigns, using Bedrock and Docker Compose",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    },
    {
      "type": "package",
      "package": {
        "name": "kinsta/kinsta-mu-plugins",
        "type": "wordpress-muplugin",
        "version": "2.3.7",
        "dist": {
          "url": "https://kinsta.com/kinsta-tools/kinsta-mu-plugins.zip",
          "type": "zip"
        }
      }
    }
  ],
  "require": {
    "php": ">=8.0",
    "composer/installers": "^2.2",
    "vlucas/phpdotenv": "^5.5",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "6.2",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.1.0",
    "wpackagist-plugin/create-block-theme": "^1.9.0",
    "wpackagist-plugin/wordpress-importer": "^0.8.0",
    "wpackagist-plugin/wordfence": "^7.6",
    "wpackagist-plugin/safe-svg": "^2.0",
    "mnsami/composer-custom-directory-installer": "^2.0",
    "htmlburger/carbon-fields": "^3.6",
    "wpackagist-plugin/post-types-order": "^2.0",
    "wpackagist-plugin/pdfjs-viewer-shortcode": "^2.1",
    "wpackagist-plugin/sticky-posts-switch": "^2.1",
    "wpackagist-plugin/highlight-search-terms": "^1.8",
    "wpackagist-plugin/imagify": "^2.1",
    "wpackagist-plugin/wordpress-seo": "^21.2",
    "kinsta/kinsta-mu-plugins": "^2.3",
    "wpackagist-plugin/wp-gravity-forms-spreadsheets": "^1.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6.2",
    "roave/security-advisories": "dev-latest",
    "smgladkovskiy/phpcs-git-pre-commit": "dev-master"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true,
      "mnsami/composer-custom-directory-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ],
      "web/app/vendor/{$vendor}/{$name}": ["htmlburger/carbon-fields"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "install-hooks": [
      "sh ./vendor/smgladkovskiy/phpcs-git-pre-commit/src/setup.sh"
    ],
    "post-install-cmd": [
      "@install-hooks"
    ],
    "post-update-cmd": [
      "@install-hooks"
    ],
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
